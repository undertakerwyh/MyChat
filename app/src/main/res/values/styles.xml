<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="line_h_tranparent">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="line_h_black" parent="line_h_tranparent">
        <item name="android:background">#000000</item>
    </style>
    <style name="line_h_black_1" parent="line_h_tranparent_1">
        <item name="android:background">#000000</item>
    </style>
    <style name="line_h_gray_1" parent="line_h_tranparent_1">
        <item name="android:background">#989898</item>
    </style>
    <style name="line_h_tranparent_1">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="config_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Toolbar.Pop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="ActionMenuTextStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

</resources>
