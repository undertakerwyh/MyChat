<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pop_friend_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/pop_friend_search_weight"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_search_title"
            android:textSize="@dimen/pop_friend_title_size"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/pop_friend_title_padding"
            android:text="@string/pop_friend_title"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></View>
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/send_message"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_alignParentEnd="true"
            android:id="@+id/iv_send_request" />
    </LinearLayout>


        <View
            android:layout_alignBottom="@id/tv_search_title"
            style="@style/line_h_black_1"
            android:id="@+id/view"></View>

        <EditText
            android:id="@+id/et_friend_name"
            android:layout_width="match_parent"
            android:hint="@string/pop_friend_hint"
            android:maxLines="2"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_search_title"
            android:layout_alignParentStart="true" />



</LinearLayout>