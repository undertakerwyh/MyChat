<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.wyh.mychat.activity.LoginActivity">


    <ImageView
        android:id="@+id/iv_actionbar_head"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/headportrait" />

    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_user"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg"
            android:hint="密码" />

        <ImageView
            android:id="@+id/password_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/et_password_text"
            android:src="@drawable/password" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_btn"
        android:layout_width="wrap_content"
        android:layout_below="@+id/layout_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:background="@drawable/btn"
            android:text="登陆"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="注册"
        android:textColor="@color/colorBlack" />

    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_actionbar_head"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_user_text"
            android:src="@drawable/user_pic" />

        <EditText
            android:id="@+id/et_user_text"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg"
            android:hint="账号" />

    </RelativeLayout>


</RelativeLayout>