<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wyh.mychat.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_user"
        android:layout_marginTop="@dimen/login_password_margintop">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="@dimen/login_edit_width"
            android:layout_height="@dimen/login_edit_height"
            android:layout_centerInParent="true"
            android:inputType="textPassword"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/selector_ic_lock"
            android:background="@drawable/edit_bg_long"
            android:hint="密码" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_btn"
        android:layout_width="wrap_content"
        android:layout_below="@+id/layout_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_password_margintop"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/login_btn_width"
            android:layout_height="@dimen/login_btn_height"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="登陆"
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_headportrait_margintop"
        android:layout_below="@+id/iv_actionbar_head"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/et_user_text"
            android:layout_width="@dimen/login_edit_width"
            android:layout_height="@dimen/login_edit_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edit_bg_long"
            android:drawableLeft="@drawable/selector_ic_person"
            android:hint="账号" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/layout_btn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>