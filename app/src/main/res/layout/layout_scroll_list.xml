<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/config_item_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_listviewbar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_click_bg"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_listviewbar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/setting_search"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/action_setting_textsize" />

        <View style="@style/line_h_black"></View>
    </LinearLayout>

</LinearLayout>