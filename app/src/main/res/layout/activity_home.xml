<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:popupTheme="@style/Toolbar.Pop"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorWhite"
        app:theme="@style/ActionMenuTextStyle"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/toolbar_text_size"
            android:layout_width="@dimen/action_text_width"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <com.wyh.mychat.view.TouchViewPager
        android:id="@+id/vp_Home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"></com.wyh.mychat.view.TouchViewPager>

    <View style="@style/line_h_gray_1"></View>

        <TabWidget
            android:id="@+id/tabWidget"
            android:divider="@color/transparent"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottombar_height"></TabWidget>


</LinearLayout>
