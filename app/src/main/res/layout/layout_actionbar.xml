<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorWhite"
    android:padding="2dp">

    <ImageView
        android:id="@+id/iv_actionbar_left"
        android:layout_width="@dimen/action_left_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/tv_actionbar_text"
        android:layout_width="@dimen/action_text_width"
        android:gravity="center"
        android:lines="1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:text="Talk"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_actionbar_right"
        android:layout_width="@dimen/action_right_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:src="@drawable/function" />

    <View
        style="@style/line_h_black"
        android:layout_alignParentBottom="true"></View>

</RelativeLayout>