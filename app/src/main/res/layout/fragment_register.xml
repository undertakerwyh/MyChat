<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_actionbar_head"
        android:layout_width="@dimen/register_headportrait_size"
        android:layout_height="@dimen/register_headportrait_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register_headportrait_margintop"
        android:src="@drawable/headportrait" />

    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/register_user_margintop"
        android:layout_below="@+id/iv_actionbar_head"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/user_text"
            android:layout_width="@dimen/register_user_size"
            android:layout_height="@dimen/register_user_size"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/et_user_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/register_btn_textsize"
            android:text="@string/register_user" />

        <EditText
            android:id="@+id/et_user_text"
            android:layout_width="@dimen/register_edit_width"
            android:layout_height="@dimen/register_edit_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_user"
        android:layout_marginTop="@dimen/register_password_margintop">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="@dimen/register_edit_width"
            android:layout_height="@dimen/register_edit_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg" />

        <TextView
            android:id="@+id/password_pic"
            android:layout_width="@dimen/register_user_size"
            android:layout_height="@dimen/register_user_size"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="@string/register_password"
            android:textSize="@dimen/register_btn_textsize"
            android:layout_toStartOf="@+id/et_password_text"
             />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_password_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_password"
        android:layout_marginTop="@dimen/register_repassword_margintop">

        <EditText
            android:id="@+id/et_repassword_text"
            android:layout_width="@dimen/register_edit_width"
            android:layout_height="@dimen/register_edit_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg" />

        <TextView
            android:id="@+id/repassword_pic"
            android:layout_width="@dimen/register_repassword_width"
            android:layout_height="@dimen/register_repassword_height"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorBlack"
            android:text="@string/register_repassword"
            android:textSize="@dimen/register_btn_textsize"
            android:layout_toStartOf="@+id/et_repassword_text"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/register_btn_width"
        android:layout_height="@dimen/register_btn_height"
        android:layout_below="@id/layout_password_re"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register_btn_margintop"
        android:background="@drawable/btn"
        android:text="@string/title_register"
        android:textColor="@color/colorWhite" />
</RelativeLayout>