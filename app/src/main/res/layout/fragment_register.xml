<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_actionbar_head"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/headportrait" />

    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/iv_actionbar_head"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/user_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/et_user_text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:text="账号" />

        <EditText
            android:id="@+id/et_user_text"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_user"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg" />

        <TextView
            android:id="@+id/password_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="密码"
            android:textSize="15sp"
            android:layout_toStartOf="@+id/et_password_text"
             />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_password_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_password"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_password_text"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/input_bg" />

        <TextView
            android:id="@+id/password_pic"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorBlack"
            android:text="确认密码"
            android:textSize="15sp"
            android:layout_toStartOf="@+id/et_password_text"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/layout_password_re"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn"
        android:text="注册"
        android:textColor="@color/colorWhite" />
</RelativeLayout>