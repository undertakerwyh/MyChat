<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyh.mychat.activity.TalkActivity">

    <com.wyh.mychat.view.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.wyh.mychat.view.ActionBar>

    <com.wyh.mychat.view.xlistview.XListView
        android:id="@+id/lv_talk_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:listSelector="@color/transparent"></com.wyh.mychat.view.xlistview.XListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_send_height"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_input_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/line_black"
            android:hint="请输入..."
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/btn_send"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
