<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_item_height"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_chat_headPortrait"
            android:layout_width="@dimen/lv_image_size"
            android:layout_height="@dimen/lv_image_size"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/headportrait" />

        <ImageView
            android:layout_width="@dimen/tv_new_icon_width"
            android:layout_height="@dimen/tv_new_icon_height"
            android:src="@drawable/new_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/iv_chat_headPortrait"
            android:id="@+id/iv_new_icon" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="0.5"

                android:text="123124"
                android:textSize="@dimen/tv_username_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_chat_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="@dimen/tv_time_marginRight"
                android:text="日期"
                android:textSize="@dimen/tv_time_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_chat_lastContent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:gravity="top"
            android:text="1233"
            android:textSize="@dimen/tv_content_size" />

    </LinearLayout>
</LinearLayout>
